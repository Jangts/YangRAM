<!DOCTYPE html>
<html lang="zh-CN">

<head>
    {{@includes/head.niml}}
    <link href="{{$__SRCDIR}}stylesheets/detail.css" type="text/css" rel="stylesheet">
</head>

<body>
    {{@includes/header.niml}}
    <!-- main slider carousel -->
    <section class="bc section bg-light">
        <div class="bc blank-30"></div>
        <div class="bc w1200 pa-20 bg-white grid-21" style=" box-shadow: 0px 0px 2px #DDD">
            <div class="nm-15 main-container">
                <div class="bc blank-10"></div>
                <header><span class="dir">
                    <a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/">招生就业</a>
                    <i>/</i>
                    <a href=" {{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/{{$___CATEGORY_ID}}/">
                        <switch name="$___CATEGORY_ID">
                            <case value="1">本科生</case>
                            <case value="2">专科生</case>
                            <case value="3">继续教育</case>
                            <case value="4">就业信息</case>
                            <case value="5">3+2专升本</case>
                        </switch>
                    </a></span>
                </header>
                <article class="news-content">
                    <header>{{$___TITLE}}</header>
                    <div class="news-desc">
                        <span>{{$___PUBTIME}}</span>
                        <span>编辑：{{$___AUTHOR}}</span>
                        <span>来源：<if $___SOURCE>{{$___SOURCE}}<else />本站</if></span>
                        <span>查看：{{$___KEY_COUNT}}<span>
                    </div>
                    <decode value="$___CONTENT" />
                </article>
                <div class="bc h50 al-center title-50 ft-999 ft-12 grid-12">
                    <div class="nm-6">上一篇：
                        <if $___Earlier_InSameCategory>
                            <a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/article/{{***$___Earlier_InSameCategory.ID***}}/">
                                <str value="$___Earlier_InSameCategory.TITLE" length="19" />
                            </a>
                            <else /> 没有了 </if>
                    </div>
                    <div class="nm-6">下一篇：
                        <if $___Later_InSameCategory>
                            <a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/article/{{***$___Later_InSameCategory.ID***}}/">
                                <str value="$___Later_InSameCategory.TITLE" length="19" />
                            </a>
                            <else /> 没有了 </if>
                    </div>
                </div>
            </div>
            <div class="nm-1">&nbsp;</div>
            <div class="nm-5">
                <div class="side-list-title">栏目导航</div>
                <ul class="side-list">
                    <li class="{{$___CATEGORY_ID='1'=>actived}}"><a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/1/">本科生</a></li>
                    <li class="{{$___CATEGORY_ID='5'=>actived}}"><a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/5/">3+2专升本</a></li>
                    <li class="{{$___CATEGORY_ID='2'=>actived}}"><a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/2/">专科生</a></li>
                    <li class="{{$___CATEGORY_ID='3'=>actived}}"><a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/3/">继续教育</a></li>
                    <li class="{{$___CATEGORY_ID='4'=>actived}}"><a href="{{$REQUEST.REST_HANDLER_DIR}}s/{{$___SET_ALIAS}}/category/4/">就业信息</a></li>
                </ul>
            </div>
        </div>
        <div class="bc blank-50"></div>
    </section>
    {{@includes/footer.niml}}
</body>

</html>