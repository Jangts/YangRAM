/**
 * NIA配置模板
 * 1. 此文件为应用配置文件的模板文件，请勿直接修改；
 * 2. 对应用进行配置，需拷贝此文件到应用文件夹根目录，然后修改你需要的项，并删掉不用的项；
 * 3. 应用配置文件为一般JSON文件，并不受主流服务器保护，配置信息有可能暴露，请勿写入有安全隐患的信息；
 * 4. 工作环境中的“AppProperties.json”文件还需要删除注释，不然无法运行。
 */
{
    // 应用名称
    "name": "",
    // 套件所使用的 PHP命名空间
    "suitspace": null,
    // 应用所使用的 PHP命名空间，不含套件命名空间
    "namespace": "YangRAM",
    // 应用源信息
    "metadata": {
        // 应用版本号
        "version": "",
        // 搜索关键字
        "keywords": ["YangRAM Interactive Information Intelligent Integration System", "YangRAM", "System", "Interactive Information Intelligent Integration System", "I4S"],
        // 应用描述
        "description": "YangRAM Interactive Information Intelligent Integration System",
        // 应用主页
        "homepage": null,
        // 应用反馈页面
        "issues": null
    },
    // 作者信息
    "author": {
        // 开发者标识
        "author_id": 0,
        // 作者名称
        "author_name": "",
        // 作者主页
        "homepage": null,
        // 参与开发者名单
        "developers": []
    },
    // 出入口列表
    "manifest": {
        // 内容提供者：统一信息读取响应入口，必须（但可不填，系统提供默认值）
        "ContentProvider": {
            "classname": "",
            "filename": ""
        },
        // 资源浏览者：自定义路由的数据读取响应入口，主要用于输出HTML页面，可选
        "ResourceBrowser": {
            "classname": "",
            "filename": ""
        },
        // 维运界面资源传输者：维运界面专用读取响应入口，主要负责OIML渲染，必须（但可不填，系统提供默认值）
        "OISourceTransfer": {
            "classname": "",
            "filename": ""
        },
        // 资源设置者：统一信息提交响应入口，可选
        "ResourceReceiver": {
            "classname": "",
            "filename": ""
        },
        // 通用资源传输者：面向资源本身的RESTful风格的读写一体化响应入口，可选
        "ResourceTransfer": {
            "classname": "",
            "filename": ""
        },
        // 跨进程通信员：应用间通信用的请求出口，可选
        "IPCommunicator": {
            "classname": "",
            "filename": ""
        },
        // 单元测试者：非正常入口，用来测试模型、控制器、模板等单元的一个工具，自带路由和页面渲染功能，可选（且仅在调试模式下有用）
        "UnitTester": {
            "classname": "",
            "filename": ""
        }
    },
    // 图标
    "icons": {
        // 标识列表，不同尺寸的logo
        "logo": {
            "80": "icon.png"
        },
        // 拓展图标列表，其中normal用于logo尺寸缺省时的缩放原型
        "ect.": {
            "normal": "icon.png"
        }
    },
    // 运行需求列表，应用运行系统会预先加载的类或类库
    "requires": {},
    // 安装需求列表，应用安装时会同步安装扩展包，这些包可能在应用运行中被调用
    "dependents": {},
    // 权限请求列表，应用运行所需要的权限列表，引号中注明为什么需要改权限，项缺省和值缺省都被视为不需要改权限
    "permissions": {
        // 使用系统主数据所在数据库链接实例
        "DEFAULT_PDOX_USEABLE": "",
        // 使用应用私有数据所在数据库链接实例
        "ACTIVITY_PDOX_USEABLE": "",

        // 允许读取读取所有数据表
        "ALL_RDBTABLE_READABLE": "",
        // 允许写入数据到路由与主题映射注册表
        "MAPREG_RDBTABLE_WRITEABLE": "",
        // 允许读取CMF内容表及SPC元数据注册表
        "CMFCNT_RDBTABLE_READABLE": "",
        // 允许写入数据到CMF内容表及SPC元数据注册表
        "CMFCNT_RDBTABLE_WRITEABLE": "",
        // 允许读取文件资源信息与映射表
        "SRCINF_RDBTABLE_READABLE": "",
        // 允许读取用户扩展信息映射表
        "USRMAP_RDBTABLE_READABLE": "",
        // 允许写入数据到用户扩展信息映射表
        "USRMAP_RDBTABLE_WRITEABLE": "",
        // 允许读取用户消息表
        "USRMSG_RDBTABLE_READABLE": "",
        // 允许写入数据到用户消息表
        "USRMSG_RDBTABLE_WRITEABLE": "",

        // 允许读取所有类型的缓存数据
        "ALL_STORAGESG_READABLE": "",
        // 允许读取系统运行数据
        "SYSDATA_READABLE": "",
        // 允许读取用户数据
        "USRDATA_READABLE": "",
        // 允许写入用户数据
        "USRDATA_WRITEABLE": "",
        // 允许应用使用内存缓存来加速
        "MEMORYCACHE_USEABLE": "",

        // 允许从所有远程主机（不含黑名单主机）上下载数据
        "ALL_REMOTEURL_GETABLE": "",
        // 允许上传数据到所有远程主机（不含黑名单主机）
        "ALL_REMOTEURL_SETABLE": ""
    }
}